{
  "name": "crazycodr/roman",
  "description": "Provides a simple decimal/roman number converter",
  "type": "library",
  "keywords": ["roman", "convert", "format"],
  "license": "MIT",
  "support": {
    "issues": "https://github.com/crazycodr/csv/issues"
  },
  "authors": [
    {
      "name": "Mathieu Dumoulin",
      "email": "crazyone@crazycoders.net"
    }
  ],
  "autoload": {
    "psr-4": {
      "CrazyCodr\\Converters\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CrazyCodr\\Converters\\Test\\": "test"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^5.2",
    "league/csv": "^8.0",
    "fabpot/php-cs-fixer": "^1.9"
  },
  "scripts": {
    "test": "phpunit --coverage-text; php-cs-fixer fix -v --diff --dry-run;"
  }
}
